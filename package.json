{
  "private": true,
  "name": "in3words",
  "description": "",
  "license": "",
  "scripts": {
    "dev": "concurrently \"yarn dev:remix\" \"yarn dev:sass\" \"yarn dev:postcss\"",
    "clean": "rimraf build && rimraf public/build",
    "build:remix": "remix build",
    "build:postcss": "postcss temp/style.css -o app/styles/index.css",
    "build:sass": "sass styles/index.scss temp/style.css",
    "build": "yarn clean && yarn build:sass && yarn build:postcss && yarn build:remix",
    "postinstall": "remix setup node",
    "start": "remix-serve build",
    "dev:remix": "remix dev",
    "dev:postcss": "postcss temp/style.css -o app/styles/index.css --watch",
    "dev:sass": "sass --watch styles/index.scss temp/style.css"
  },
  "dependencies": {
    "@icon-park/svg": "^1.3.5",
    "@remix-run/react": "^1.0.6",
    "@remix-run/serve": "^1.0.6",
    "classnames": "^2.3.1",
    "date-fns": "^2.27.0",
    "dotenv": "^10.0.0",
    "highlight.js": "^11.3.1",
    "htmlparser2": "^7.2.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^1.0.6",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@ainou/code-style": "0.0.11",
    "@remix-run/dev": "^1.0.6",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "@typescript-eslint/eslint-plugin": "^5.5.0",
    "@typescript-eslint/parser": "^5.5.0",
    "autoprefixer": "^10.4.0",
    "concurrently": "^6.4.0",
    "eslint": "^8.4.0",
    "postcss": "^8.4.4",
    "postcss-cli": "^9.0.2",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "sass": "^1.44.0",
    "tailwindcss": "^2.2.19",
    "typescript": "^4.1.2"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false
}
